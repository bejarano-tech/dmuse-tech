{
  "name": "useink",
  "keywords": [
    "useink",
    "ink!",
    "Polkadot",
    "Kusama",
    "Substrate",
    "AlephZero",
    "Astar",
    "Phala",
    "React",
    "hooks"
  ],
  "version": "1.10.3",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "description": "A React hooks library for ink! contracts",
  "license": "Apache-2.0",
  "repository": "github:paritytech/useink",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "lint": "tsc",
    "release": "pnpm run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@polkadot/types": "^10.9.1",
    "@polkadot/types-codec": "^10.9.1",
    "@types/react": "^18.2.7",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "ws": "^8.13.0"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./core": {
      "import": {
        "types": "./dist/core.d.ts",
        "default": "./dist/core.mjs"
      },
      "require": {
        "types": "./dist/core.d.ts",
        "default": "./dist/core.js"
      }
    },
    "./chains": {
      "import": {
        "types": "./dist/chains.d.ts",
        "default": "./dist/chains.mjs"
      },
      "require": {
        "types": "./dist/chains.d.ts",
        "default": "./dist/chains.js"
      }
    },
    "./notifications": {
      "import": {
        "types": "./dist/notifications.d.ts",
        "default": "./dist/notifications.mjs"
      },
      "require": {
        "types": "./dist/notifications.d.ts",
        "default": "./dist/notifications.js"
      }
    },
    "./utils": {
      "import": {
        "types": "./dist/utils.d.ts",
        "default": "./dist/utils.mjs"
      },
      "require": {
        "types": "./dist/utils.d.ts",
        "default": "./dist/utils.js"
      }
    }
  },
  "dependencies": {
    "nanoid": "3"
  }
}
